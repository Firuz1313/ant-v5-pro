# Настройки сервера
NODE_ENV=development
PORT=3000

# Настройки базы данных PostgreSQL (Neon)
DATABASE_URL=postgresql://neondb_owner:unpkg_4YeHe3BLxhOi@ep-royal-meadow-a5gnz7bg.us-east-2.aws.neon.tech/neondb?sslmode=require
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# CORS настройки
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Безопасность
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml

# Middleware
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
REQUEST_LOGGING=true

# API настройки
API_VERSION=v1
API_PREFIX=/api

# Разработка
DEBUG=true
LOG_LEVEL=debug
USE_MOCK_DB=false
